<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/coinNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:width="100dp"
        android:height="20dp" />

    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/coinNickName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:width="100dp"
        android:height="20dp" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coinNickName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:width="100dp"
        android:height="20dp" />

    <TextView
        android:id="@+id/purchasePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coinNickName"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/coinNickName"
        android:layout_marginStart="10dp"
        android:width="100dp"
        android:height="20dp" />

    <TextView
        android:id="@+id/currentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coinNickName"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/purchasePrice"
        android:layout_marginStart="10dp"
        android:width="100dp"
        android:height="20dp" />

    <TextView
        android:id="@+id/datePurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentPrice"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:width="250dp"
        android:height="20dp" />



</RelativeLayout>