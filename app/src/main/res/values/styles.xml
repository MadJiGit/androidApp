<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Divider">
        //you can give your color here.
        //that will change all divider color in your app.
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RelativeLayoutColor" parent="TextAppearance.AppCompat">
        <item name="android:background">#dddd00</item>
    </style>


    <style name="DataCellsStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">#00ff00</item>
        <item name="android:width">100dp</item>
        <item name="android:height">20dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StringStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">#4F504F</item>
        <item name="android:textSize">8sp</item>
        <item name="android:width">100dp</item>
        <item name="android:height">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>